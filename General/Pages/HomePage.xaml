<Page x:Class="The_Email_Client.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Email_Client"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="600"
      Background="#FFD9D0FF"
      Title="HomePage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD9D0FF">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="EmailButton" Content="Email" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="125" Height="79" Grid.Column="1" Click="Button_Click"/>
        <Button x:Name="MathButton" Content="Maths!" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="125" Height="79" Grid.Column="0" Click="Button_Click"/>
        <Button Content="Log Out" Grid.Column="1" HorizontalAlignment="Left" Margin="130,0,-80,0" VerticalAlignment="Center" Width="75" Click="LogOutButton_Click"/>



    </Grid>
</Page>
