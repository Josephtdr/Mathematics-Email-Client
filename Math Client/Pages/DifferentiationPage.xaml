<Page x:Class="The_Email_Client.DifferentiationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Email_Client"
      mc:Ignorable="d"
      Title="DifferentiationPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFE2EAFF"  Width="426" Height="371">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,30,0,72" HorizontalAlignment="Center">
            <Button x:Name="cmdUp" Content="^"  Click="Cmd_Click" Width="19" Height="22" VerticalAlignment="Top" />
            <TextBox x:Name="OrderBox" Text="0" DataObject.Pasting="TextBoxPasting" PreviewTextInput="NumberTextbox_PreviewTextInput" TextChanged="NumberBoxes_TextChanged"/>
            <Button x:Name="cmdDown" Content="˅"  Click="Cmd_Click" Width="19" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,89,0,13" HorizontalAlignment="Center">
            <Button x:Name="cmdUp2" Content="^"  Click="Cmd_Click" Width="19" />
            <TextBox x:Name="MagnitudeBox" Text="0" DataObject.Pasting="TextBoxPasting" PreviewTextInput="NumberTextbox_PreviewTextInput" TextChanged="NumberBoxes_TextChanged"/>
            <Button x:Name="cmdDown2" Content="˅"  Click="Cmd_Click" Width="19" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="91,32,13,70" HorizontalAlignment="Center">
            <Button x:Name="cmdUp3" Content="^"  Click="Cmd_Click" Width="19" />
            <TextBox x:Name="NumofQuestionsBox" Text="0" DataObject.Pasting="TextBoxPasting" PreviewTextInput="NumberTextbox_PreviewTextInput" TextChanged="NumberBoxes_TextChanged"/>
            <Button x:Name="cmdDown3" Content="˅"  Click="Cmd_Click" Width="19" />
        </StackPanel>

        <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="  Generate&#x0a;  Random&#x0a;String of X's" Grid.Column="2" HorizontalAlignment="Center" Height="66" VerticalAlignment="Center" Width="67" Click="GenerateRandomEquationButton_Click" Margin="10,29,77,29"/>
        <Button x:Name="CreateRanPDFButton" Content="Random&#x0a;PDF" Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="88,59,0,0" VerticalAlignment="Top" Width="56" Click="CreateRanPDFButton_Click"/>

        <TextBox x:Name="AnswerBox" Grid.Column="1" HorizontalAlignment="Center" Height="88" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" PreviewTextInput="AnswerBox_PreviewTextInput"/>

        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Bottom" Width="74" Click="SubmitButton_Click" Height="20" Margin="0,0,0,10"/>
        <Button Content="Back" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Height="18" VerticalAlignment="Bottom" Width="60" Click="BackButton_Click" Margin="0,0,10,10" />

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
            <TextBlock Text = "Fractions:" />
            <RadioButton x:Name = "no" Checked = "FractionsUseHandleCheck"  Content = "None" GroupName = "Fractions" IsChecked="True"/>
            <RadioButton x:Name = "half"  Checked = "FractionsUseHandleCheck"   Content = "Coefficient Only" GroupName = "Fractions"/>
            <RadioButton x:Name = "full"  Checked = "FractionsUseHandleCheck"  Content = "Power + Coef" GroupName = "Fractions"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
            <TextBlock Text = "Type:" />
            <RadioButton x:Name = "diferentiation" Checked = "TypeHandleChecked"  Content = "Diferentiation" GroupName = "Type" IsChecked="True"/>
            <RadioButton x:Name = "integration"  Checked = "TypeHandleChecked"   Content = "Integration" GroupName = "Type"/>
        </StackPanel>

        <TextBlock x:Name="EquationTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Bunches of x's" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Height="114" Width="151" TextAlignment="Center"/>
        <TextBlock x:Name="DifferentiationTextBlock" Visibility="Hidden" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Dif Equation (=0 trust me)" VerticalAlignment="Center" Width="150" Height="95" Grid.Column="2" TextAlignment="Center" Margin="2,5,2,24"/>

        <Label Content="Num of terms" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" />
        <Label Content="Magnitude" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="0" Margin="0,0,0,40" />
        <Label Content="Answer" HorizontalAlignment="Center"  VerticalAlignment="Top" Grid.Row="2" Margin="110,0,1,0" Height="26" Width="0"/>
        <Label Content="Questions" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="88,6,3,0"/>

        <Button x:Name="Reveal_AnswerButton" Content="Show Answer" Grid.Column="2" HorizontalAlignment="Center" Height="25" Grid.Row="1" VerticalAlignment="Bottom" Width="82" Click="ShowRevealButton_Click"/>

        <Button x:Name="PdfButton" Content="Start PDF" Grid.Column="2" HorizontalAlignment="Left" Height="28" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Click="PdfButton_Click"/>
        <Button x:Name="EndPdfButton" Content="Cancel PDF" Grid.Column="2" HorizontalAlignment="Right" Height="28" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center" Click="EndPdfButton_Click"/>
        <Button x:Name="RecordingColour" Grid.Column="2" HorizontalAlignment="Center" Height="19" Margin="0,10,10,0" Grid.Row="2" VerticalAlignment="Top" Width="22" Background="#FF14F51E"/>

    </Grid>
</Page>
