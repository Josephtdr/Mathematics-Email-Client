<Page x:Class="The_Email_Client.DifferentiationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Email_Client"
      mc:Ignorable="d"
      Title="DifferentiationPage" Height="372" Width="382">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD9D0FF"  Width="426" Height="371" Margin="-22,20,-22,-19">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="OrderBox" Grid.Column="1" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" PreviewTextInput="Textbox_PreviewTextInput" Margin="5,10,5,34"/>
        <TextBox x:Name="DifficultyBox" Grid.Column="1" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" PreviewTextInput="Textbox_PreviewTextInput" Margin="5,34,5,10"/>
        <TextBox x:Name="AnswerBox" Grid.Column="1" HorizontalAlignment="Center" Height="23" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="65,0,28,0"/>

        <TextBox x:Name="EquationTextBox" HorizontalAlignment="Right" Grid.Row="1" TextWrapping="Wrap" Text="Equation (=0 trust me)" VerticalAlignment="Center" Width="179" Height="64" IsEnabled="False"/>
        <TextBox x:Name="DifferentiationTextBox" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="Dif Equation (=0 trust me)" VerticalAlignment="Center" Width="179" Height="66" Grid.Column="1" IsEnabled="False"/>

        <Label Content="Order" HorizontalAlignment="Center" Margin="64,10,46,31" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <Label Content="Difficulty" HorizontalAlignment="Center" Margin="51,34,42,7" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <Label Content="Answer" HorizontalAlignment="Center"  VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Margin="10,0,154,0"/>

        <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Generate Random&#x0a;       Equation" Grid.Column="1" HorizontalAlignment="Center" Height="55" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="130" Click="GenerateRandomEquationButton_Click"/>
        <Button Content="Back" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" Height="18" Margin="0,0,0,0" VerticalAlignment="Center" Width="59" Click="BackButton_Click"/>
        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Center" Margin="10,38,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>

        <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="32,6,209,7">
            <TextBlock Text = "Fractions Enabled?:" />
            <RadioButton x:Name = "no" Checked = "HandleCheck"  Content = "No" GroupName = "Fractions" IsChecked="True"/>
            <RadioButton x:Name = "half"  Checked = "HandleCheck"   Content = "Only Component Fractions" GroupName = "Fractions"/>
            <RadioButton x:Name = "full"  Checked = "HandleCheck"  Content = "Power and component Factions" GroupName = "Fractions"/>
        </StackPanel>

    </Grid>
</Page>
