<Page x:Class="The_Email_Client.MathSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Email_Client"
      mc:Ignorable="d" 
      Background="#FFD9D0FF"
      d:DesignHeight="100"
      Title="MathSelectionPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD9D0FF">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DifferentiationButton" Content="Differentiation" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="125" Height="79" Grid.Column="1" Click="MathButton_Click"/>
        <Button x:Name="IndiciesButton" Content="Indicies" HorizontalAlignment="Center" Margin="42,0,38,0" VerticalAlignment="Center" Width="125" Height="79" Grid.Column="2" Click="MathButton_Click"/>
        <Button Content="Back" HorizontalAlignment="Center" VerticalAlignment="Center" Width="58" Click="BackButton_Click" Grid.Column="0"/>

    </Grid>
</Page>
